<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:product) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%#= model_class.human_attribute_name(:price) %></th>
      <th><%#= model_class.human_attribute_name(:imageurl) %></th>
      <th><%#= model_class.human_attribute_name(:producturl) %></th>
      <th><%= model_class.human_attribute_name(:sku) %></th>
      <th><%#= model_class.human_attribute_name(:postreview) %></th>
      <th><%#= model_class.human_attribute_name(:adminreview) %></th>
      <th><%#= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:productimage) %></th>
      <th><%#= model_class.human_attribute_name(:email) %></th>
      <th><%#= model_class.human_attribute_name(:email_id) %></th>
      <th><%#= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>

    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, post_path(post) %></td>
        <td><%= post.product %></td>
        <td><%= post.description %></td>
        <td><%#= post.price %></td>
        <td><%#= post.imageurl %></td>
        <td><%#= post.producturl %></td>
        <td><%= post.sku %></td>
        <td><%#= post.postreview %></td>
        <td><%#= post.adminreview %></td>
        <td><%#= post.image %></td>
        <td><%= post.productimage %></td>
        <td><%#= post.email %></td>
        <td><%#= post.email_id %></td>
        <td><%#=l post.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-mini' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

